<h1>Alterar Senha</h1>

<%= form_for(@user_to_change, url: do_change_password_user_path(@user_to_change)) do |f| %>
  
  <div class="field">
    <%= f.label :old_password, "Senha Atual" %><br>
    <%= f.password_field :old_password %>
  </div>

  <div class="field">
    <%= f.label :password, "Nova Senha" %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Nova Senha (Repetir)" %><br>
    <%= f.password_field :password_confirmation %>
  </div>
  
  <div class="actions">
    <%= f.submit "Alterar senha" %>
  </div>
<% end %>

<%= link_to 'Voltar', :back %>
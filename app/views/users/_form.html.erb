  <% end %>

  <% if current_user.admin? -%>
    <div class="field">
      <%= f.label :unidade_id %><br>
      <%= select("user", "unidade_id", Unidade.all.collect {|p| [ p.nome, p.id ] }, {include_blank: 'Nenhum'}) %>

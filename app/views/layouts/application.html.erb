<!DOCTYPE html>
<html>
<head>
  <title>Sistema de Retaguarda</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="container">
    <%= link_to "Início", '/' %> |
    <% if current_user %>
      <b><%= current_user.nome %></b> - <i><%= current_user.nome_unidade %></i> | <%= link_to "Alterar Senha", change_password_user_path(current_user) %> | <%= link_to "Sair", '/logout' %>
    <% else %>
      <%= link_to 'Entrar', '/login' %>
    <% end %>

  <% if current_user -%>
    <nav id="menu">
      <ul>
        <li><%= link_to "Usuários", users_path %></li>
      <% if current_user.admin? -%>
        <li><%= link_to "Unidades", unidades_path %></li>
      <% end -%>
        <li><%= link_to "Ordens", opos_path %></li>
        <li><%= link_to "Apenados", apenados_path %></li>
        <li><%= link_to "Programa Férias Seguras", programas_path %></li>
      </ul>
    </nav>
  <% end -%>

    <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>

    <%= yield %>

  </div>
</body>
</html>

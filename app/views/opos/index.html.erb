

<h1>Ordens de Policiamento</h1>

<table class="data-table">
  <thead>
    <tr>
      <% if current_user.admin? -%>
      <th>Unidade</th>
      <% end -%>
      <th>Número</th>
      <th>Descrição</th>
      <th>Data início</th>
      <th>Data fim</th>
      <th>--- Ações ---</th>
    </tr>
  </thead>

  <tbody>
    <% @opos.each do |opo| %>
      <tr>
      <% if current_user.admin? -%>
        <td><%= opo.unidade_nome %></td>
      <% end -%>
        <td><%= opo.numero %></td>
        <td><%= opo.descricao %></td>
        <td><%= opo.inicio %></td>
        <td><%= opo.fim %></td>
        <td>        
        <%= link_to 'Exibir', opo %> |
        <%= link_to 'Editar', edit_opo_path(opo) %> |
        <%= link_to 'Excluir', opo, method: :delete, data: { confirm: 'Tem Certeza?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Ordem de Policiamento', new_opo_path %>
<br>

<%= will_paginate @opos %>